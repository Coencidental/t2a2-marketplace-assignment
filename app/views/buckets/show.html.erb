<h1><%= @bucket.name %></h1>

<p><%= @bucket.description %></p>

<% if @bucket.items.count > 0 %>

  <table>
    <tr>
      <th>Item name</th>
      <th>Brand</th>
      <th>Description</th>
      <th>Price</th>
      <th>Returns Policy</th>
    </tr>
  <% @bucket.items.each do |item| %>
    <% if item.sold == false %>
    <tr>
      <td><%= link_to item.name, bucket_item_path(@bucket, item.id) %></td>
      <td><%= item.brand %></td>
      <td><%= item.description %></td>
      <td><%= item.price %></td>
      <td><%= item.returnable %></td>
      <td><%= link_to "Delete this item", bucket_item_destroy_path(@bucket.id, item), data: {confirm: 'Are you sure you want to delete this item?'} %></td>
    </tr>

    <% end %>
  <% end%>
  </table>
  <%= link_to "Add an item", new_bucket_item_path(@bucket) %>
  <% else %>

  <p><%= @bucket.name %> has no items yet!  <%= link_to "Add some now!", new_bucket_item_path(@bucket) %></p>
<% end %>


