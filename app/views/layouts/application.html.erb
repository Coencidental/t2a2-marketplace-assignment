<!DOCTYPE html>
<html>
  <head>
    <title>Pond</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= javascript_include_tag 'https://maps.googleapis.com/maps/api/js?key='+Rails.application.credentials.google_maps_api_key %>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= yield(:head_tags) %>
  </head>

  <body>
    <% if current_user %>
      <%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
      <%= link_to 'All buckets', buckets_path %>
      <%= link_to 'Your buckets', user_buckets_path %>
      <%= link_to 'Your inbox', conversations_path %>
      <%= link_to 'Your profile', user_profile_path(current_user) %>
    <% else %>
      <%= link_to 'Sign up', new_user_registration_path %>
      <%= link_to 'Sign in', new_user_session_path %>
    <% end %>
      
    <%= render 'layouts/alerts' %>
    <%= yield %>
  </body>
</html>
