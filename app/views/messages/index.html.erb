<ul>
    <% @messages.each do |message| %>
      <% if message.body %>
        <li>
          <h4><%= message.user.username %></h4>
          <p><%= message.body %></p>
        </li>
      <% end %>
    <% end %>
  </ul>
  
  <%= form_for [@conversation, @message] do |f| %>
    <div class="field">
      <%= f.text_area :body, placeholder: "Your message" %>
    </div>
  
    <%= f.submit "Send" %>
  <% end %>

<p><%= link_to "Back to inbox", conversations_path %></p>
<p>Visit their profile: <%= link_to @conversation.recipient(current_user).username, user_profile_path(@conversation.recipient(current_user)) %></p>